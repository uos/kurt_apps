<?xml version="1.0"?>
<launch>
  <arg name="map_topic" default="map" />

  <!-- Throttle the voxel grid that is being published for rviz -->
  <node ns="move_base_node/local_costmap" name="voxel_grid_throttle" pkg="topic_tools" type="throttle" args="messages voxel_grid 3.0 voxel_grid_throttled" />

  <node pkg="move_base" type="move_base" name="move_base_node" output="screen">
    <remap from="map" to="$(arg map_topic)"/>

    <!-- Load common configuration files -->
    <rosparam file="$(find kurt_navigation)/config/move_base_params.yaml" command="load" />
    <rosparam file="$(find kurt_navigation)/config/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find kurt_navigation)/config/recovery_behaviors.yaml" command="load" />

    <!-- Load local and global navigation specific parameters -->
    <rosparam file="$(find kurt_navigation)/config/common_costmap_params.yaml" command="load" ns="local_costmap" />

    <rosparam file="$(find kurt_navigation)/config/local_costmap_params.yaml" command="load" />

    <rosparam file="$(find kurt_navigation)/config/common_costmap_params.yaml" command="load" ns="global_costmap" />

    <rosparam file="$(find kurt_navigation)/config/global_costmap_params.yaml" command="load" />
  </node>
</launch>
